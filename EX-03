from collections import deque
def water_jug(jug1, jug2, target):
    visited = set()
    q = deque([(0,0)])
    while q:
        a,b = q.popleft()
        if (a,b) in visited: continue
        print(a,b)
        if a==target or b==target: return True
        visited.add((a,b))
        q.extend([(jug1,b),(a,jug2),(0,b),(a,0),
                  (a-min(a,jug2-b),b+min(a,jug2-b)),
                  (a+min(b,jug1-a),b-min(b,jug1-a))])
    return False
water_jug(4,3,2)
